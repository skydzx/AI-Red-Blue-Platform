# AI Red Blue Platform Environment Configuration
# Copy this file to .env and modify values

# Application
ENVIRONMENT=development
APP_NAME="AI Red Blue Platform"
APP_VERSION=0.1.0

# Database
DATABASE_URL=sqlite:///./data/platform.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=

# AI Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_ENDPOINT=
AZURE_API_KEY=

# Logging
LOG_LEVEL=INFO

# External Tools
EXTERNAL_TOOLS_PATH=./external-tools
TOOLS_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
